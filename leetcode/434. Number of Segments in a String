class Solution {
    public int countSegments(String s) {
    
        //APPROACH :- split and count the arrary elments whose length >0
        
        //System.out.println(s.length());
        int count=0;
        String []temp=s.split(" ");
        for(int i=0;i<temp.length;i++)
         if(temp[i].length()>0) 
            count++;
            
        return count;        
        }
    }
